{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "type/major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "type/minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "labels": [
        "type/patch"
      ]
    },
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "labels": [
        "type/digest"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "renovate/container-image"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "addLabels": [
        "renovate/helm-chart"
      ]
    },
    {
      "matchDatasources": [
        "terraform-provider"
      ],
      "addLabels": [
        "renovate/terraform"
      ]
    },
    {
      "matchDatasources": [
        "github-releases",
        "github-tags"
      ],
      "addLabels": [
        "renovate/github-release"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "renovate/github-action"
      ]
    },
    {
      "matchManagers": [
        "flux"
      ],
      "addLabels": [
        "renovate/flux-helmrelease"
      ]
    },
    {
      "matchManagers": [
        "helmfile"
      ],
      "addLabels": [
        "renovate/helmfile"
      ]
    }
  ]
}
