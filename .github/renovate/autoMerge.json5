{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": [
        "Auto-merge container updates for trusted containers (patch, minor, and digest)"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ],
      "matchPackagePatterns": [
        "ghcr.io/bjw-s",
        "ghcr.io/home-operations",
        "ghcr.io/esanchezm",
        "postfinance/",
        "ghcr.io/gethomepage/"
      ]
    },
    {
      "description": "qBittorrent (app-template) minor versions require 7 days before auto-merge",
      "prBodyNotes": [
        "‚è≥ **Delayed Automerge**: This minor update will auto-merge after 7 days to allow for testing",
        "üìÖ **Merge Date**: {{#if mergeDate}}{{mergeDate}}{{else}}7 days from PR creation{{/if}}"
      ],
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "app-template"
      ],
      "matchFileNames": [
        "**/qbittorrent/**"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "minimumReleaseAge": "7 days",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "description": "qBittorrent (app-template) patch versions auto-merge immediately",
      "prBodyNotes": [
        "‚ö° **Immediate Automerge**: Patch updates merge immediately when CI passes"
      ],
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "app-template"
      ],
      "matchFileNames": [
        "**/qbittorrent/**"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "description": "Auto merge helm updates for patch and minor versions (excluding app-template)",
      "matchDatasources": [
        "helm"
      ],
      "excludePackageNames": [
        "app-template"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "description": "Auto merge app-template updates immediately (except qBittorrent)",
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "app-template"
      ],
      "excludePackageFiles": [
        "**/qbittorrent/**"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "description": [
        "Auto-merge GitHub Actions for patch and minor versions"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Auto-merge raw Kubernetes deployment updates for trusted images",
      "matchManagers": [
        "kubernetes"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ],
      "matchPackagePatterns": [
        "ghcr.io/gethomepage/",
        "postfinance/"
      ]
    },
    {
      "description": "Auto-merge Flux HelmRelease chart updates for patch and minor versions",
      "matchManagers": [
        "flux"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "description": "Auto-merge Helmfile chart updates for patch and minor versions",
      "matchManagers": [
        "helmfile"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}
