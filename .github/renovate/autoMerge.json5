{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": [
        "Auto-merge container digests updates for trusted containers"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "digest"
      ],
      "matchPackagePatterns": [
        "ghcr.io/bjw-s",
        "ghcr.io/home-operations"
      ]
    },
    {
      "description": "qBittorrent (app-template) minor versions require 7 days before auto-merge",
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "app-template"
      ],
      "matchFileNames": [
        "**/qbittorrent/**"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "minimumReleaseAge": "7 days",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "description": "qBittorrent (app-template) patch versions auto-merge immediately",
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "app-template"
      ],
      "matchFileNames": [
        "**/qbittorrent/**"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "description": "Auto merge helm updates for patch and minor versions (excluding app-template)",
      "matchDatasources": [
        "helm"
      ],
      "excludePackageNames": [
        "app-template"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "description": "Auto merge app-template updates immediately (except qBittorrent)",
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "app-template"
      ],
      "excludePackageFiles": [
        "**/qbittorrent/**"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "description": [
        "Auto-merge GitHub Actions for patch and minor versions"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
