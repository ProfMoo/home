{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(America/New_York)",
    "github>ProfMoo/home//.github/renovate/autoMerge.json5",
    "github>ProfMoo/home//.github/renovate/commitMessage.json5",
    "github>ProfMoo/home//.github/renovate/labels.json5",
    "github>ProfMoo/home//.github/renovate/semanticCommits.json5"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ü§ñ",
  "platformAutomerge": true,
  "automergeSchedule": [
    "at any time"
  ],
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "ignoreTests": true,
  // Add detailed automerge information to PR bodies
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
  "prBodyDefinitions": {
    "Automerge": "‚úÖ **Automerge**: Enabled for {{updateType}} updates{{{#unless automerge}}} ‚ùå **Disabled for this update type**{{/unless}}",
    "Schedule": "{{{#if hasSchedule}}}‚è∞ **Schedule**: {{schedule}}{{else}}‚è∞ **Schedule**: No restrictions{{/if}}"
  },
  // Ignoring sops secrets
  "ignorePaths": [
    "**/*.sops.*"
  ],
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "helmfile": {
    "fileMatch": [
      "helmfile\\.ya?ml$",
      ".*/helmfile\\.ya?ml$"
    ]
  },
  "terraform": {
    "fileMatch": [
      "\\.tf$"
    ],
    "versioning": "hashicorp"
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process custom Kubernetes upgrade CRDs",
      "fileMatch": [
        "(^|/)kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\n.+version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}docker{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
