{
    // General editor settings
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "files.associations": {
        "*.tf": "terraform",
        "*.tfvars": "terraform"
    },
    // YAML settings
    "[yaml, yml]": {
        "editor.defaultFormatter": "bluebrown.yamlfmt"
    },
    "yamlfmt.args": [
        "-conf",
        ".yamlfmt.yaml"
    ],
    // Markdown settings
    "[md, markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "markdownlint.config": {
        "extends": ".markdownlint-cli2.yaml"
    },
    // Terraform settings
    "[tf, hcl]": {
        "editor.defaultFormatter": "hashicorp.terraform"
    },
    // Dockerfile settings
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    // Shell script settings
    "[shellscript, dotenv, ignore, gitignore]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    // YAML schemas
    "yaml.schemas": {
        "kubernetes": [
            "./kubernetes/**/*.yml",
            "./kubernetes/**/*.yaml"
        ]
    },
    "yaml.schemaStore.enable": true,
    // Spellcheck settings
    "cSpell.checkOnlyEnabledFileTypes": true,
    "cSpell.enabledFileTypes": {
        "md": true
    },
    "cSpell.languageSettings": [
        {
            "languageId": "*",
            "enabled": false
        },
        {
            "languageId": "markdown",
            "enabled": true
        }
    ],
    "cSpell.words": [
        "animebytes",
        "betanin",
        "bitwarden",
        "brainz",
        "buildarr",
        "ceph",
        "cloudflared",
        "coredns",
        "crds",
